<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag (@first_posts.avatar) , :class => 'd-block w-100 header_carl_image'%>
    </div>
    <%  @other_posts.each do |post| %>
      <div class="carousel-item">
        <%= image_tag (post.avatar) , :class => 'd-block w-100 header_carl_image'%>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<%# latest review section %>
<section class="latest_reviews container bars">
  <h1>latest reviews</h1>
  <div class="title-bar"></div>
  <div class="container latest-section">
    <div class="row">
      <%  @other_posts.each do |post| %>
        <div class="col-md-4 latest-containers">
          <div class="card">
            <%= image_tag (post.avatar) , :class => 'card-img-top'%>
            <div class="card-body">
              <h5 class="card-title"><%= post.title%></h5>
              <p class="card-text"><%= post.description%></p>
              <div class="read-more"><a href="#" class="button">Read More</a></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<%# category sections %>
<section class="latest-category container bars">
  <h1>categories</h1>
  <div class="title-bar"></div>
  <div class="container latest-section">
    <div class="row">
      <% @category.each do |post| %>
        <div class="col-md-4 latest-containers">
          <div class="card">
            <%= image_tag (post.avatar) , :class => 'card-img-top'%>
            <div class="card-body">
              <h5 class="card-title"><%= post.title%></h5>
              <div class="read-more"><a href="#" class="button">show posts</a></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
